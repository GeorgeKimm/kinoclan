{# video #}

{% macro video(data) %}
<div class="video_info">
    <p class="video_description">{{ data.bigDescription }}</p>
    <span class="author">
        Режиссер: {{ data.director }}
    </span>
    <span class="author">
        Автор сценария: {{ data.writer }}
    </span>
</div>
<div class="box_video">
    <iframe class="video" src="{{ data.linkVideo | url }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
{% endmacro %}


{# frame #}

{% macro frame(data) %}
<div class="frame_info">
    <p class="frame_description">{{ data.bigDescription }}</p>
    <span class="author">Режиссер: {{ data.director }}</span>
    <span class="author">Оператор: {{ data.operator }}</span>
</div>
<div class="box_frame">
    {%- for image in data.images -%}
       <img src="{{ image | url }}" alt="" class="card_image">
    {%- endfor -%}
</div>
{% endmacro %}
