{# box_screenplay #}

{% macro box_screenplay(data) %}
<div class="box_screenplay">
    <p class="screenplay_description">
        {{ data.bigDescription }}
    </p>
    <span class="author">
        Режиссер:
        {{ data.director }}
    </span>
    <span class="author">
        Автор сценария:
        {{ data.writer }}
    </span>
    <div class="card_info">
        <p class="card_date">{{ data.date }}</p>
    </div>
    <a href="{{ data.screenplay | url }}" download="{{ data.titleArticle }}.pdf" class="install_doc">Скачать сценарий в .pdf</a>
</div>
{% endmacro %}


