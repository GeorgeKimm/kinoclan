{# card #}

{% macro card(data, path) %}
{% set href = "/content/" + path + "/" + data.title | translit | slug %}
<div class="card">
    <a href="{{ href | url }}" class="card_link">
        <img src="{{ data.imageSmall | url }}" alt="" class="card_image">
    </a>
    <a href="{{ href | url }}" class="card_link">
        <p class="card_text">
        {{ data.title }}
        </p>
    </a>
</div>
{% endmacro %}


{# box_left #}

{% macro box_left(data) %}
{% set href = "/content/essay/" + data.titleCard | translit | slug %}
<div class="box_left">
    <div class="card_with_title">
        <a href="{{ href | url }}" class="card_link">
            <img src="{{ data.imageCrop | url }}" alt="" class="card_image">
            <p class="title_categories">
                {{ data.titleCategories }}
            </p>
        </a>
    </div>
    <a href="{{ href | url }}" class="card_link">
        <h3 class="title_card">
            {{ data.titleCard }}
        </h3>
    </a>
    <div class="card_info">
        <p class="card_date">
            {{ data.date }}
        </p>
        <div class="number_comments">
            {{ data.numberComments }}
        </div>
    </div>
    <p class="card_description">
        {{ data.description }}
    </p>
</div>
{% endmacro %}


